<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Nickname</th>
      <th>Email</th>
      <th>Sexo</th>
      <th>Permisos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:thumb) %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.sex %></td>
        <td><%= user.permission_level %></td>
        <td><%= link_to 'Editar', edit_user_path(user), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

