<% @articles.each do |article| %>
  <h2><%= link_to article.title, article, method: :get %></h2>
  <div>
  <%= article.body %>
  <% if article.may_publish? %>
   - <%= link_to 'Publicar', "/articles/#{article.id}/publish", class:'blue', method: :put %>
  <% end %> 
   - <%= link_to 'Eliminar', article, class:'red', method: :delete %></h4>    
<% end %>